<%- include('../partials/head') -%>

<%- include('../partials/nav') -%>

    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0 font-size-18">Assign Driver</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Cars</a></li>
                                    <li class="breadcrumb-item active">Assign Driver</li>
                                </ol>
                            </div>

                           

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-12">
                        <div class="card" style="height: 400px;">
                            <div class="card-body">
                                <h4 class="card-title">Assign Driver Edit</h4>
                                <p class="card-title-desc"></p>
                                <form class="needs-validation storeRegister" id="placeForm" action="/car/assing/update/<%= AssingD._id %>" method="POST" novalidate>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <select class="form-control" name="Carname" required>
                                                    <option value="">Pleas select Driver Phone</option>
                                                    <% if(car.length > 0 ){ %>
                                                    <% car.forEach(car => { %>
                                                        <option value="<%= car.carName %>"><%= car.carName %></option>
                                                     <% }) %>
                                                     <% } %> 
                                                </select>
                                                </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <div class="form-group">
                                            <select class="form-control" name="DriverPhone" required>
                                                <option value="">Pleas select Driver Phone</option>
                                                <% if(driver.length > 0 ){ %>
                                                <% driver.forEach(driver => { %>
                                                    <option value="<%= driver.PhoneNumber %>"><%= driver.PhoneNumber %></option>
                                                 <% }) %>
                                                 <% } %> 
                                            </select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-2">
                                            <button class="btn btn-primary mt-3" type="submit">update</button>
                                        </div>
                                        
                                            
                                            
                                        
                                    </div>
                                       
                                    <div class="row"></div>
                                    <br>
                                    <br>
                                    <br>
                                   
                                </form>
                            </div>
                        </div>
                        <!-- end card -->
                    </div> <!-- end col -->

                </div>


                <!-- end page title -->
               
          
            <!-- end row -->

            
        </div>
        <!-- End Page-content -->


    </div>

    <script>
         document.addEventListener('DOMContentLoaded', function () {
            FilePond.registerPlugin(
                FilePondPluginImagePreview,
                FilePondPluginImageResize,
                FilePondPluginFileEncode,
     


            );
            // https://pqina.nl/filepond/docs/patterns/api/filepond-object/#setting-options
            FilePond.setOptions({
                stylePanelAspectRatio: 30 / 50,
                imageResizeTargetWidth: 100,
                imageResizeTargetHeight: 50,
            })
            FilePond.parse(document.body);
        });

       
    </script>
